extends layouts/main.pug 

block content
  .form-container
    form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
      .fileUpload
        label(for="file") Video File
        input(type="file", id="file", name="videoFile", required=ture, accept="video/*")
      input(type="text", placeholder="Title", name="title", required=ture)
      textarea(name="description", placeholder="Description", required=ture)
      input(type="submit", value="Upload Video")
